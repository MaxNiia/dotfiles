[user]
        name = Max Niia
        email = max.emil.niia@gmail.com

[credential "https://github.com"]
        username = MaxNiia
        email = muxinatorn@gmail.com
        helper = !/usr/bin/gh auth git-credential

[credential "https://dev.azure.com"]
        useHttpPath = true

[init]
        templateDir = /home/max/.config/git/template
        defaultBranch = main

[core]
        excludesfile = /home/max/.gitignore
        editor = nvim --cmd 'let g:unception_block_while_host_edits=1'
        pager = delta
        fileMode = true
        compression = 9
        whitespace = error
        preloadindex = true

[branch]
        sort = -committerdate

[tag]
        sort = -taggerdate

[advice]
        addEmptyPathspec = false
        pushNonFastForward = false
        statusHints = false

[url "https://github.com/"]
        insteadOf = "gh/"

[push]
        autoSetupRemote = true
        followTags = true

[pull]
        rebase = true

[fetch]
        prune = true
        pruneTags = true

[rerere]
        enabled = true

[alias]
        st = status
        rb = rebase
        smu = submodule update --recursive --init
        fush = push --force-with-lease
        d = difftool -d
        m = mergetool

        lg = log --graph --pretty=format:'%C(auto)%h%d %s %C(blue)%C(bold)%cr %C(green)%an'
        lgf = log --graph --all --decorate --oneline --color
        lga = log --graph --all --pretty=format:'%C(auto)%h%d %s %C(blue)%C(bold)%cr %C(green)%an'
        lol = log --graph --decorate --pretty=oneline --abbrev-commit
        lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
        lgs = log --graph --pretty=format:'%C(auto)%h %C(cyan)%an %C(dim white)- %Creset%s %C(green)(%ar)'

[log]
        abbrevCommit = true
        graphColors = blue,yellow,cyan,magenta,green,red

[color "decorate"]
        HEAD = red
        branch = blue
        tag = yellow
        remoteBranch = magenta

[filter "lfs"]
        clean = git-lfs clean -- %f
        smudge = git-lfs smudge -- %f
        process = git-lfs filter-process
        required = true
[merge]
        conflictstyle = diff3
        tool = nvimmerge
[mergetool]
        prompt = true

[mergetool "nvimmerge"]
        cmd = nvim -d "$LOCAL" "$REMOTE" "$MERGED" -c 'wincmd w' -c 'wincmd J'

[diff]
        context = 3
        renames = copies
        interHunkContext = 10
        tool = nvimdiff
        mnemonicprefix = true  # Helps readability in diffs
        algorithm = histogram
        submodule = short

[difftool]
        prompt = true

[difftool "nvimdiff"]
        cmd = nvim -c "packadd nvim.difftool" -c "DiffTool $LOCAL $REMOTE"

[rebase]
        autosquash = true
        autostash = true
        missingCommitsCheck = warn

[submodule]
        recurse = false

[status]
        branch = true
        showStash = true
        showUntrackedFiles = all
        submoduleSummary = false

[interactive]
        singlekey = true
        diffFilter = delta --color-only

[color]
        ui = true

[commit]
        verbose = true
        status = true

[help]
        autocorrect = prompt

[color "diff-highlight"]
        oldNormal = red bold
        oldHighlight = red bold 52
        newNormal = green bold
        newHighlight = green bold 22

[color "diff"]
        meta = 11
        frag = magenta bold
        func = 146 bold
        commit = yellow bold
        old = red bold
        new = green bold
        whitespace = red reverse

[include]
        path = /home/max/.private/.gitconfig
        path = /home/max/.config/delta/themes/catppuccin.gitconfig

[includeIf "gitdir:/home/max/workspace/"]
        path = /home/max/workspace/.gitconfig

[includeIf "gitdir:/media/max/workspace/"]
        path = /media/max/workspace/.gitconfig

[delta]
        navigate = true
        dark = false
        features = catppuccin-latte

